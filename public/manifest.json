{
  "manifest_version": 2,
  "name": "AutoScroll",
  "version": "5.0",
  "description": "This extension adds customizable autoscroll support to Chrome.",
  "minimum_chrome_version": "29",
  "icons": {
    "128": "icons/icon128.png",
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "options_page": "options_page.html",
  "content_scripts": [
    {
      "all_frames": false,
      "js": [
        "content_script.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end"
    }
  ]
}
